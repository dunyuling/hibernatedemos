<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.rc.singletable.Teacher" table="teacher">
        <id name="tid" column="tid" type="java.lang.Integer" >
            <generator class="native"/>
        </id>
        <property name="tname" column="tname" type="java.lang.String"/>
        <property name="gender" column="gender" type="java.lang.String"/>
        <property name="birthday" column="birthday" type="java.util.Date"/>
        <property name="address" column="address" type="java.lang.String"/>
    </class>
</hibernate-mapping>